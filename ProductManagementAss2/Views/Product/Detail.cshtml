@model ProductManagementAss2.Models.Domain.Product
@{
    ViewData["Title"] = "Detail";
}

<div class="container mt-5">
    <div class="text-center">
        <h1>Details</h1>
    </div>

    <div class="card rounded">
        <div class="card-body">
            <h4>Products</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">Name:</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.Name)</dd>
                <dt class="col-sm-2">Description:</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.Description)</dd>
                <dt class="col-sm-2">Category:</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.Category)</dd>
                <dt class="col-sm-2">Price:</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.Price)</dd>
            </dl>
        </div>
    </div>

    <div class="mt-3">
        @if(User.IsInRole("Admin"))
        {
            <a asp-action="Update" class="btn btn-success rounded" asp-route-id="@Model.ProdId">
                   <i class="bi bi-pencil-square"></i>Edit</a>
        }
       
        <a asp-action="Index" class="btn btn-primary rounded">
            <i class="bi bi-arrow-left"></i>Back to List
        </a>
    </div>
</div>
